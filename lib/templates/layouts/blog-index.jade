doctype html

html(lang="en")

  head
    meta(name="google-site-verification" content="WrvLAybH0iJfVJrDMln9IZn5uiseOu6SaK6mfts7mHw")
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    title Blog | Adam Gibbons
    meta(name="description" content="Adam Gibbons")

    script(type="application/ld+json").
      {
        "@context": "http://schema.org",
        "@type": "BreadcrumbList",
        "itemListElement": [{
          "@type": "ListItem",
          "position": 1,
          "item": {
            "@id": "http://agibbons.com",
            "name": "Home"
          }
        },
        {
          "@type": "ListItem",
          "position": 2,
          "item": {
            "@id": "http://agibbons.com/blog",
            "name": "Blog"
          }
        }]
      }

    if env === 'development'
        link(href="/styles.css" rel="stylesheet")
    else
        // inject:css
        // link(href="styles.css" rel="stylesheet")
        // endinject

    link(href="/webfonts/ss-social.css" rel="stylesheet")

  body

    include ../partials/navbar.jade

    .section-blog
        .blog-header
            .container
                .h1.text-center For Movers, By Movers Blog

        .container
            each post in posts
                .post-summary
                    h2.title: a(href="/blog/#{post.slug}") #{post.title}
                    p.author-date Posted #{post.date} by #{post.author.name}
                    p.description #{post.meta.description}

    block footer
      //- include ../partials/footer-for-movers.jade
      include ../partials/footer.jade

    #back-to-top.hidden-xs
        img(src="/images/back-to-top.png")

    if env === 'development'
        script(src="/.js")
    else
        // inject:js
        // script(src=".js")
        // endinject

    include ../partials/google-analytics.jade